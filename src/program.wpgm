import wollok.game.*
import objetos.*

program futbolito{

	game.addVisualCharacter(lionel)
	game.addVisual(pelota)
	game.cellSize(40)
	game.width(20)
	game.height(10)
	keyboard.enter().onPressDo({game.say(lionel, "Vamos Argentina")})
	keyboard.slash().onPressDo({lionel.llevar()})
	keyboard.e().onPressDo({pelota.esquina()})
	keyboard.b().onPressDo({ lionel.irALaPelota() })
	keyboard.up().onPressDo({lionel.mover(lionel.position().up(1))})
	game.start()
}